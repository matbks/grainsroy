<mvc:View controllerName="grains.zadograinsacmcontrolling.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">                                                                                                                       
    <Page showHeader="false">                                                                                                                                                                                                                                  
        <App id="app" />                                                                                                                                                                                                                                       
        <footer>                                                                                                                                                                                                                                               
            <OverflowToolbar visible="{MessagesModel>/MessageBar}">                                                                                                                                                                                            
                <Button icon="sap-icon://message-popup" type="Success" press="onOpenMessageBox" />                                                                                                                                                             
                <ToolbarSpacer/>                                                                                                                                                                                                                               
                <Button text="Ocultar" press="onCloseMessageBar" />                                                                                                                                                                                            
            </OverflowToolbar>                                                                                                                                                                                                                                 
        </footer>                                                                                                                                                                                                                                              
    </Page>                                                                                                                                                                                                                                                    
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               