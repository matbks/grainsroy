<mvc:View                                                                                                                                                                                                                                                      
	controllerName="grains.zadograinsacmcontrollingapproval.controller.List"                                                                                                                                                                                      
	xmlns="sap.m"                                                                                                                                                                                                                                                 
	xmlns:semantic="sap.f.semantic"                                                                                                                                                                                                                               
	xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                   
>                                                                                                                                                                                                                                                              
	<semantic:SemanticPage                                                                                                                                                                                                                                        
		id="listPage"                                                                                                                                                                                                                                                
		preserveHeaderStateOnScroll="true"                                                                                                                                                                                                                           
		toggleHeaderOnTitleClick="false"                                                                                                                                                                                                                             
	>                                                                                                                                                                                                                                                             
		<semantic:titleHeading>                                                                                                                                                                                                                                      
			<Title                                                                                                                                                                                                                                                      
				id="listPageTitle"                                                                                                                                                                                                                                         
				text="{listView>/title}"                                                                                                                                                                                                                                   
				level="H2"                                                                                                                                                                                                                                                 
			/>                                                                                                                                                                                                                                                          
		</semantic:titleHeading>                                                                                                                                                                                                                                     
		<semantic:content>                                                                                                                                                                                                                                           
			<List                                                                                                                                                                                                                                                       
				id="list"                                                                                                                                                                                                                                                  
				width="auto"                                                                                                                                                                                                                                               
				class="sapFDynamicPageAlignContent"                                                                                                                                                                                                                        
				items="{                                                                                                                                                                                                                                                   
					path: '/ZADOC_GRAINS_APPROVAL_LIST',                                                                                                                                                                                                                      
					filters: [{                                                                                                                                                                                                                                               
						path: 'Status',                                                                                                                                                                                                                                          
						operator: 'EQ',                                                                                                                                                                                                                                          
						value1: 'U'                                                                                                                                                                                                                                              
					}, {                                                                                                                                                                                                                                                      
						path: 'Approver',                                                                                                                                                                                                                                        
						operator: 'EQ',                                                                                                                                                                                                                                          
						value1: true                                                                                                                                                                                                                                             
					}, {                                                                                                                                                                                                                                                      
						path: 'Type',                                                                                                                                                                                                                                            
						operator: 'NE',                                                                                                                                                                                                                                          
						value1: 'Contrato'                                                                                                                                                                                                                                       
					}],                                                                                                                                                                                                                                                       
					sorter: {                                                                                                                                                                                                                                                 
						path: 'TradingContractNumber',                                                                                                                                                                                                                           
						descending: true                                                                                                                                                                                                                                         
					},                                                                                                                                                                                                                                                        
					groupHeaderFactory: '.createGroupHeader'                                                                                                                                                                                                                  
				}"                                                                                                                                                                                                                                                         
				busyIndicatorDelay="{listView>/delay}"                                                                                                                                                                                                                     
				noDataText="{listView>/noDataText}"                                                                                                                                                                                                                        
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"                                                                                                                                                                                         
				growing="true"                                                                                                                                                                                                                                             
				growingScrollToLoad="true"                                                                                                                                                                                                                                 
				updateFinished=".onUpdateFinished"                                                                                                                                                                                                                         
				selectionChange=".onSelectionChange"                                                                                                                                                                                                                       
				sticky="HeaderToolbar"                                                                                                                                                                                                                                     
			>                                                                                                                                                                                                                                                           
				<headerToolbar>                                                                                                                                                                                                                                            
					<OverflowToolbar id="overflowToolbar">                                                                                                                                                                                                                    
						<SearchField                                                                                                                                                                                                                                             
							id="searchField"                                                                                                                                                                                                                                        
							showRefreshButton="true"                                                                                                                                                                                                                                
							tooltip="{i18n>listSearchTooltip}"                                                                                                                                                                                                                      
							search=".onSearch"                                                                                                                                                                                                                                      
							width="auto"                                                                                                                                                                                                                                            
							placeholder="{i18n>fixationOrContract}"                                                                                                                                                                                                                 
						>                                                                                                                                                                                                                                                        
							<layoutData>                                                                                                                                                                                                                                            
								<OverflowToolbarLayoutData                                                                                                                                                                                                                             
									id="overflowToolbarLayoutData"                                                                                                                                                                                                                        
									minWidth="150px"                                                                                                                                                                                                                                      
									maxWidth="240px"                                                                                                                                                                                                                                      
									shrinkable="true"                                                                                                                                                                                                                                     
									priority="NeverOverflow"                                                                                                                                                                                                                              
								/>                                                                                                                                                                                                                                                     
							</layoutData>                                                                                                                                                                                                                                           
						</SearchField>                                                                                                                                                                                                                                           
						<ToolbarSpacer id="toolbarSpacer1"/>                                                                                                                                                                                                                     
						<SegmentedButton                                                                                                                                                                                                                                         
							id="segmentedButtonType"                                                                                                                                                                                                                                
							tooltip="{i18n>approvalDocumentType}"                                                                                                                                                                                                                   
							selectionChange="onSearch"                                                                                                                                                                                                                              
						>                                                                                                                                                                                                                                                        
							<items>                                                                                                                                                                                                                                                 
								<SegmentedButtonItem                                                                                                                                                                                                                                   
									id="segmentedButtonItem1"                                                                                                                                                                                                                             
									text="{i18n>fixation}"                                                                                                                                                                                                                                
									key="Fixação"                                                                                                                                                                                                                                         
								/>                                                                                                                                                                                                                                                     
								<SegmentedButtonItem                                                                                                                                                                                                                                   
									id="segmentedButtonItem2"                                                                                                                                                                                                                             
									text="{i18n>contract}"                                                                                                                                                                                                                                
									key="Contrato"                                                                                                                                                                                                                                        
								/>                                                                                                                                                                                                                                                     
								<SegmentedButtonItem                                                                                                                                                                                                                                   
									id="segmentedButtonItem3"                                                                                                                                                                                                                             
									text="{i18n>all}"                                                                                                                                                                                                                                     
									key="All"                                                                                                                                                                                                                                             
								/>                                                                                                                                                                                                                                                     
							</items>                                                                                                                                                                                                                                                
						</SegmentedButton>                                                                                                                                                                                                                                       
						<SegmentedButton                                                                                                                                                                                                                                         
							id="segmentedButtonStatus"                                                                                                                                                                                                                              
							tooltip="{i18n>status}"                                                                                                                                                                                                                                 
							selectionChange="onSearch"                                                                                                                                                                                                                              
						>                                                                                                                                                                                                                                                        
							<items>                                                                                                                                                                                                                                                 
								<SegmentedButtonItem                                                                                                                                                                                                                                   
									id="segmentedButtonEsboco"                                                                                                                                                                                                                            
									text="{i18n>draft}"                                                                                                                                                                                                                                   
									key="U"                                                                                                                                                                                                                                               
								/>                                                                                                                                                                                                                                                     
								<SegmentedButtonItem                                                                                                                                                                                                                                   
									id="segmentedButtonAll"                                                                                                                                                                                                                               
									text="{i18n>all}"                                                                                                                                                                                                                                     
									key="All"                                                                                                                                                                                                                                             
								/>                                                                                                                                                                                                                                                     
							</items>                                                                                                                                                                                                                                                
						</SegmentedButton>                                                                                                                                                                                                                                       
						<Button                                                                                                                                                                                                                                                  
							id="reportButton"                                                                                                                                                                                                                                       
							press=".onPressReportButton"                                                                                                                                                                                                                            
							icon="sap-icon://chart-table-view"                                                                                                                                                                                                                      
							type="Transparent"                                                                                                                                                                                                                                      
							tooltip="{i18n>reportButtonTooltip}"                                                                                                                                                                                                                    
						/>                                                                                                                                                                                                                                                       
						<Button                                                                                                                                                                                                                                                  
							id="sortButton"                                                                                                                                                                                                                                         
							press=".onOpenViewSettings"                                                                                                                                                                                                                             
							icon="sap-icon://sort"                                                                                                                                                                                                                                  
							type="Transparent"                                                                                                                                                                                                                                      
						/>                                                                                                                                                                                                                                                       
					</OverflowToolbar>                                                                                                                                                                                                                                        
				</headerToolbar>                                                                                                                                                                                                                                           
				<items>                                                                                                                                                                                                                                                    
					<ObjectListItem                                                                                                                                                                                                                                           
						id="objectListItem"                                                                                                                                                                                                                                      
						type="Navigation"                                                                                                                                                                                                                                        
						press=".onSelectionChange"                                                                                                                                                                                                                               
						title="{Title} - {TradingContractNumber} - {TradingContractTypeName} ({TradingContractType})"                                                                                                                                                            
					>                                                                                                                                                                                                                                                         
						<firstStatus>                                                                                                                                                                                                                                            
							<ObjectStatus                                                                                                                                                                                                                                           
								id="objectStatusStatus"                                                                                                                                                                                                                                
								text="{Type}"                                                                                                                                                                                                                                          
								state="{                                                                                                                                                                                                                                               
									path: 'Type',                                                                                                                                                                                                                                         
									formatter: '.formatter.approvalTypeState'                                                                                                                                                                                                             
								}"                                                                                                                                                                                                                                                     
							/>                                                                                                                                                                                                                                                      
						</firstStatus>                                                                                                                                                                                                                                           
						<secondStatus>                                                                                                                                                                                                                                           
							<ObjectStatus                                                                                                                                                                                                                                           
								id="objectStatus"                                                                                                                                                                                                                                      
								text="{StatusText} ({Status})"                                                                                                                                                                                                                         
								state="{                                                                                                                                                                                                                                               
									path: 'Status',                                                                                                                                                                                                                                       
									formatter: '.formatter.statusState'                                                                                                                                                                                                                   
								}"                                                                                                                                                                                                                                                     
							/>                                                                                                                                                                                                                                                      
						</secondStatus>                                                                                                                                                                                                                                          
						<ObjectAttribute                                                                                                                                                                                                                                         
							id="objectAttributeFixationPaymentDate"                                                                                                                                                                                                                 
							text="{                                                                                                                                                                                                                                                 
								path: 'PaymentDate',                                                                                                                                                                                                                                   
								type: 'sap.ui.model.type.Date',                                                                                                                                                                                                                        
								formatOptions: {                                                                                                                                                                                                                                       
									style: 'short',                                                                                                                                                                                                                                       
									UTC: true                                                                                                                                                                                                                                             
								}                                                                                                                                                                                                                                                      
							}"                                                                                                                                                                                                                                                      
							title="{/#ZADOC_GRAINS_APPROVAL_LISTType/PaymentDate/@sap:label}"                                                                                                                                                                                       
							visible="{= ${Type} === 'Fixação' || ${FixedContract} }"                                                                                                                                                                                                
						/>                                                                                                                                                                                                                                                       
						<ObjectAttribute                                                                                                                                                                                                                                         
							id="objectAttributeCreatedOn"                                                                                                                                                                                                                           
							title="{/#ZADOC_GRAINS_APPROVAL_LISTType/CreatedOn/@sap:label}"                                                                                                                                                                                         
							text="{                                                                                                                                                                                                                                                 
								path: 'CreatedOn',                                                                                                                                                                                                                                     
								type: 'sap.ui.model.type.DateTime'                                                                                                                                                                                                                     
							}"                                                                                                                                                                                                                                                      
						/>                                                                                                                                                                                                                                                       
						<ObjectAttribute                                                                                                                                                                                                                                         
							id="objectAttributeCreatedBy"                                                                                                                                                                                                                           
							text="{CreatedByName} ({CreatedBy})"                                                                                                                                                                                                                    
						/>                                                                                                                                                                                                                                                       
					</ObjectListItem>                                                                                                                                                                                                                                         
				</items>                                                                                                                                                                                                                                                   
			</List>                                                                                                                                                                                                                                                     
		</semantic:content>                                                                                                                                                                                                                                          
	</semantic:SemanticPage>                                                                                                                                                                                                                                      
</mvc:View>                                                                                                                                                                                                                                                    