sap.ui.define([], function () {                                                                                                                                                                                                                                
    "use strict";                                                                                                                                                                                                                                              
                                                                                                                                                                                                                                                               
    return {                                                                                                                                                                                                                                                   
        /**                                                                                                                                                                                                                                                    
         * Rounds the currency value to 2 digits                                                                                                                                                                                                               
         *                                                                                                                                                                                                                                                     
         * @public                                                                                                                                                                                                                                             
         * @param {string} sValue value to be formatted                                                                                                                                                                                                        
         * @returns {string} formatted currency value with 2 digits                                                                                                                                                                                            
         */                                                                                                                                                                                                                                                    
        currencyValue: function (sValue) {                                                                                                                                                                                                                     
            if (!sValue) {                                                                                                                                                                                                                                     
                return "";                                                                                                                                                                                                                                     
            }                                                                                                                                                                                                                                                  
                                                                                                                                                                                                                                                               
            return parseFloat(sValue).toFixed(2);                                                                                                                                                                                                              
        },                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                               
        AccountingDocumentStatusText: function (sStatus) {                                                                                                                                                                                                     
            var oBundle = this.getOwnerComponent().getModel("i18n").getResourceBundle();                                                                                                                                                                       
            if (sStatus) { return oBundle.getText(sStatus) };                                                                                                                                                                                                  
                                                                                                                                                                                                                                                               
        },                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                               
        AccountingDocumentStatus: function (sStatus) {                                                                                                                                                                                                         
            if (sStatus === "CLEARING") {                                                                                                                                                                                                                      
                return "Success";                                                                                                                                                                                                                              
            } else if (sStatus === "RESIDUAL") {                                                                                                                                                                                                               
                return "Warning";                                                                                                                                                                                                                              
            } else if (sStatus === "OPEN") {                                                                                                                                                                                                                   
                return "Error";                                                                                                                                                                                                                                
            } else if (sStatus === "REVERSED") {                                                                                                                                                                                                               
                return "Warning";                                                                                                                                                                                                                              
            } else if (sStatus === "REVERSEDOC") {                                                                                                                                                                                                             
                return "Warning";                                                                                                                                                                                                                              
            }                                                                                                                                                                                                                                                  
                                                                                                                                                                                                                                                               
            else {                                                                                                                                                                                                                                             
                return "None";                                                                                                                                                                                                                                 
            }                                                                                                                                                                                                                                                  
        },                                                                                                                                                                                                                                                     
    };                                                                                                                                                                                                                                                         
});                                                                                                                                                                                                                                                            