sap.ui.define(["sap/ui/core/format/NumberFormat"], function (NumberFormat) {                                                                                                                                                                                   
    "use strict";                                                                                                                                                                                                                                              
                                                                                                                                                                                                                                                               
    return {                                                                                                                                                                                                                                                   
        /**                                                                                                                                                                                                                                                    
         * Rounds the currency value to 2 digits                                                                                                                                                                                                               
         *                                                                                                                                                                                                                                                     
         * @public                                                                                                                                                                                                                                             
         * @param {string} sValue value to be formatted                                                                                                                                                                                                        
         * @returns {string} formatted currency value with 2 digits                                                                                                                                                                                            
         */                                                                                                                                                                                                                                                    
        currencyValue: function (sValue) {                                                                                                                                                                                                                     
            if (!sValue) {                                                                                                                                                                                                                                     
                return "";                                                                                                                                                                                                                                     
            }                                                                                                                                                                                                                                                  
                                                                                                                                                                                                                                                               
            return parseFloat(sValue).toFixed(2);                                                                                                                                                                                                              
        },                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                               
        formatCurrency: function (ContractNetAmount, ContractCurrency) {                                                                                                                                                                                       
            var oNumberFormat = NumberFormat.getCurrencyInstance({                                                                                                                                                                                             
                currencyCode: ContractCurrency                                                                                                                                                                                                                 
            });                                                                                                                                                                                                                                                
            return oNumberFormat.format(ContractNetAmount) + ' ' + ContractCurrency;                                                                                                                                                                           
        },                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                               
        formatQuantity: function (Quantity, BaseUnitOfMeasure) {                                                                                                                                                                                               
            var formattedQuantity = Number(Quantity).toLocaleString();                                                                                                                                                                                         
            return formattedQuantity + " " + BaseUnitOfMeasure;                                                                                                                                                                                                
        },                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
        approvalTypeState: function (sStatus) {                                                                                                                                                                                                                
            if (sStatus === "Contrato") {                                                                                                                                                                                                                      
                return "Success";                                                                                                                                                                                                                              
            } else if (sStatus === "Fixação") {                                                                                                                                                                                                                
                return "Warning";                                                                                                                                                                                                                              
            } else {                                                                                                                                                                                                                                           
                return "None";                                                                                                                                                                                                                                 
            }                                                                                                                                                                                                                                                  
        },                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
        statusState: function (sStatus) {                                                                                                                                                                                                                      
            if (sStatus === "T") {                                                                                                                                                                                                                             
                return "Success";                                                                                                                                                                                                                              
            } else if (sStatus === "S") {                                                                                                                                                                                                                      
                return "Error";                                                                                                                                                                                                                                
            } else {                                                                                                                                                                                                                                           
                return "None";                                                                                                                                                                                                                                 
            }                                                                                                                                                                                                                                                  
        }                                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
    };                                                                                                                                                                                                                                                         
});                                                                                                                                                                                                                                                            